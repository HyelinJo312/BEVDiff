{

    "version": "0.2.0",
    "configurations": [

                {
            "name": "Train_bevdiffuser", 
            "type": "debugpy",
            "request": "launch",
            //"module": "torch.distributed.launch",
            //"justMyCode": true,
            "program": "${workspaceFolder}/BEVFormer/projects/bevdiffuser/train_bev_diffuser_dino.py",
            // "program": "${workspaceFolder}/BEVFormer/projects/bevdiffuser/train_bev_diffuser_original.py",
            "console": "integratedTerminal",
            "args": [
        
                "--bev_config", "${workspaceFolder}/BEVFormer/projects/configs/bevdiffuser/layout_tiny_dino.py",
                "--bev_checkpoint", "${workspaceFolder}/BEVFormer/ckpts/bevformer_tiny_epoch_24.pth",
                "--pretrained_unet_checkpoint", "None",
                "--pretrained_model_name_or_path", "stabilityai/stable-diffusion-2-1",
                "--train_batch_size", "1",
                "--dataloader_num_workers", "4",
                "--gradient_accumulation_steps", "1",
                "--max_train_steps", "10",
                "--learning_rate", "1e-4",
                "--lr_scheduler", "constant",
                "--output_dir", "${workspaceFolder}/train/debug_output",
                "--checkpoints_total_limit", "1",
                "--checkpointing_steps", "5",
                "--tracker_run_name", "debug_run",
                "--tracker_project_name", "debug_project",
                "--uncond_prob", "0.2",
                "--prediction_type", "sample",
                "--task_loss_scale", "0.1",
                "--launcher", "none",
                // "--freeze_bev_model"
                // "--report_to", "none"
                
            ],

            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0",
                "RANK": "0",
                "LOCAL_RANK": "0",
                "WORLD_SIZE": "1",
                "MASTER_ADDR": "127.0.0.1",
                "MASTER_PORT": "29500",

            }
            
        },

        {
            "name": "Train_bevdiffuser_pretrain", 
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/BEVFormer/tools/train_pretrain.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/BEVFormer/projects/configs/bevdiffuser/layout_tiny_pretrain_GTlayout.py", 
                // "--launcher", "None",
                "--deterministic",
                "--work_dir", "${workspaceFolder}/results_pretrain_debug_v2",
                // "--load_from", "${workspaceFolder}/BEVFormer/ckpts/bevformer_tiny_epoch_24.pth",
                // "--resume_from", "None",
                "--report_to", "tensorboard",
                "--denoise_loss_weight", "1.0",
                "--bev_checkpoint", "${workspaceFolder}/BEVFormer/ckpts/bevformer_tiny_epoch_24.pth",
                "--unet_checkpoint", "{workspaceFolder}/BEVFormer/ckpts"

            ],

            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0",
                "RANK": "0",
                "LOCAL_RANK": "0",
                "WORLD_SIZE": "1",
                "MASTER_ADDR": "127.0.0.1",
                "MASTER_PORT": "29500",


            }
        }
            
    ]
}